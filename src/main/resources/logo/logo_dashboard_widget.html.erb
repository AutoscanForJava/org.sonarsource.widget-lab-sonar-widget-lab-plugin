<%
	def getConfigValue(key, defaultValue)
		value = Property.value(key, @project.id, '');
		
		if (value.blank?)
			value = configuration(key);
		end
		
		if (value.blank?)
			value = defaultValue || '';
		end
		
	   	return value;
	end

	alttext = getConfigValue('logo.alttext', '');
	location = getConfigValue('logo.imglocation', '');
	link = getConfigValue('logo.link', '');
	style = getConfigValue('logo.style', 'width: 100%;');
	
	if (!location.blank?)
		if location.starts_with?'sources:'
			src = ApplicationController.root_context + '/api/plugins/logo/getLogo?project=' + @snapshot.project_id.to_s;
		else
			src = location;
		end
%>
<a href="<%= link -%>" target="_blank">
  <img src="<%= src -%>" alt="<%= alttext -%>" title="<%= alttext -%>" style="<%= style -%>" />
</a>
<% 
	end 
%>